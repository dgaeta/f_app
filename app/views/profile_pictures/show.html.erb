<p id="notice"><%= notice %></p>


<div id="images">
  <% for profile_picture in current_user.profile_pictures %>
    <div class="profile_picture">
      <%= image_tag profile_picture.filepicker_url, w: 160, h: 160, fit: 'clip'  %>
      <div class="actions">
        <%= link_to "edit", edit_profile_picture_path(profile_picture) %> |
        <%= link_to "remove", profile_picture, :confirm => 'Are you sure?', :method => :delete %>
      </div>
    </div>
  <% end %>
  <div class="clear"></div>
</div>



<h2>Comments</h2>

<%= render "comments/comments" %>
<%= render "comments/form" %>