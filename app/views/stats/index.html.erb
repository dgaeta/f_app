<h1>Listing stats</h1>

<table>
  <tr>
    <th>Winners_id</th>
    <th>Money earned</th>
    <th>Games won</th>
    <th>Games played</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @stats.each do |stat| %>
  <tr>
    <td><%= stat.winners_id %></td>
    <td><%= stat.money_earned %></td>
    <td><%= stat.games_won %></td>
    <td><%= stat.games_played %></td>
    <td><%= link_to 'Show', stat %></td>
    <td><%= link_to 'Edit', edit_stat_path(stat) %></td>
    <td><%= link_to 'Destroy', stat, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

